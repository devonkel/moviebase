{>"layouts/master" /}

{<body}
        <h2>Movie List</h2>
    {#movies}
        <div class="large-4 columns movie">
            <img src="{.cover}">
            <h3>{.title}</h3>
            <a href="/movies/details/{.id}" class="button tiny">Info</a>
            <a href="{.trailer}" target="_blank" class="button success tiny">View Trailer</a>
        </div>
    {:else}
        <p>No movie results</p>
    {/movies}
{/body}
